<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp" tools:srcCompat="@tools:sample/avatars"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/imageView" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
                android:contentDescription="@string/avatarDescription"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:id="@+id/linearLayout">
            <TextView
                    android:text="@string/namePlaceholder"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameTextView"
                    android:gravity="end" android:layout_marginEnd="8dp"/>
            <TextView
                    android:text="@string/titlePlaceholder"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/titleTextView" android:layout_marginStart="8dp"/>
        </LinearLayout>
        <TextView
                android:text="@string/departmentPlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/departmentTextView"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/departmentTextView"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:id="@+id/linearLayout2"
                android:layout_marginTop="8dp">
            <TextView
                    android:text="@string/phonePlaceholder"
                    android:layout_width="wrap_content" android:gravity="end"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    android:id="@+id/phoneTextView" android:layout_marginEnd="8dp"/>
            <TextView
                    android:text="@string/emailPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    android:id="@+id/emailTextView" android:layout_marginStart="8dp"/>
        </LinearLayout>
        <TextView
                android:text="@string/bioPlaceholder"
                android:layout_width="0dp"
                android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/bioTextView"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>