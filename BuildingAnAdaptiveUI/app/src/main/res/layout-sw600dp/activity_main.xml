<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="192dp"
            android:layout_height="0dp" android:id="@+id/linearLayout3"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline2">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="192dp" app:srcCompat="@drawable/employee1"
                android:id="@+id/imageView"
                android:contentDescription="@string/employeeAvatar"/>
        <LinearLayout
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/linearLayout4">
            <TextView
                    android:text="@string/firstname"
                    android:layout_width="match_parent" android:gravity="center_vertical"
                    android:layout_height="30dp" android:id="@+id/firstnameTextView" android:textAlignment="gravity"/>
            <TextView
                    android:text="@string/lastname"
                    android:layout_width="match_parent" android:gravity="center_vertical"
                    android:layout_height="30dp" android:id="@+id/lastnameTextView" android:textAlignment="gravity"/>
            <TextView
                    android:text="@string/jobtitle"
                    android:layout_width="match_parent" android:gravity="center_vertical"
                    android:layout_height="30dp" android:id="@+id/jobtitleTextView" android:textAlignment="gravity"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
            android:text="@string/_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/oneTextView" android:layout_weight="1"
            android:onClick="numberClicked"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/twoTextView"/>
    <TextView
            android:text="@string/_2"

            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/twoTextView" android:layout_weight="1"
            android:onClick="numberClicked"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/linearLayout"
            app:layout_constraintBottom_toTopOf="@+id/threeTextView"/>
    <TextView
            android:text="@string/_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/threeTextView" android:layout_weight="1"
            android:onClick="numberClicked"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/fourTextView"/>
    <TextView
            android:text="@string/_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/fourTextView" android:layout_weight="1"
            android:onClick="numberClicked"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/fiveTextView"/>
    <TextView
            android:text="@string/_5"
            android:layout_width="0dp" android:layout_alignParentBottom="true"
            android:layout_height="wrap_content" android:id="@+id/fiveTextView" android:layout_weight="1"
            android:onClick="numberClicked"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout"
            app:layout_constraintStart_toEndOf="@+id/linearLayout3" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </LinearLayout>
        <TextView
                android:text="@string/employee_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/employeeInfoTextView"/>
    </LinearLayout>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="299dp" android:id="@+id/guideline2"/>

</android.support.constraint.ConstraintLayout>