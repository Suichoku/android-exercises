<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="20dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp">
        <TextView
                android:text="@string/itemNameDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/nameTextView" android:layout_weight="1"/>
        <TextView
                android:text="@string/itemCountDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/countTextView" android:layout_weight="1"/>
        <TextView
                android:text="@string/itemPriceDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/priceTextView" android:layout_weight="1"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>